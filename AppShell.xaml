<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ApplicationFundamentals.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ApplicationFundamentals.View"
    Shell.FlyoutBehavior="Disabled"
    Title="ApplicationFundamentals">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:Dashboard}"
        Route="Dashboard" />

    <ShellContent
        Title="Start"
        ContentTemplate="{DataTemplate views:StartPage}"
        Route="StartPage" />

    <ShellContent
        Title="Offline"
        ContentTemplate="{DataTemplate views:OfflinePage}"
        Route="OfflinePage" />

</Shell>
