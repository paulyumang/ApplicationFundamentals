<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApplicationFundamentals.View.StartPage"
             Title="StartPage">
    <VerticalStackLayout>
        <Label 
            Text="Start Page"
            FontSize="42"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="Center" />

        <Label 
            Text="Hello"
            x:Name="MyLabel"
            FontSize="42"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="Center" />

        <Button
            Text="Click Me"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>